<h1>Listing shifts</h1>

<table>
  <tr>
    <th>Monday</th>
    <th>Tuesday</th>
    <th>Wednesday</th>
    <th>Thursday</th>
    <th>Friday</th>
    <th>Saturday</th>
    <th>Sunday</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shifts.each do |shift| %>
  <tr>
    <td><%= shift.mon_start.strftime("%I:%M%p") %> - <%= shift.mon_end.strftime("%I:%M%p") %></td>
    <td><%= shift.tue_start.strftime("%I:%M%p") %> - <%= shift.tue_end.strftime("%I:%M%p") %></td>
    <td><%= shift.wed_start.strftime("%I:%M%p") %> - <%= shift.wed_end.strftime("%I:%M%p") %></td>
    <td><%= shift.thu_start.strftime("%I:%M%p") %> - <%= shift.thu_end.strftime("%I:%M%p") %></td>
    <td><%= shift.fri_start.strftime("%I:%M%p") %> - <%= shift.fri_end.strftime("%I:%M%p") %></td>
    <td><%= shift.sat_start.strftime("%I:%M%p") %> - <%= shift.sat_end.strftime("%I:%M%p") %></td>
    <td><%= shift.sun_start.strftime("%I:%M%p") %> - <%= shift.sun_end.strftime("%I:%M%p") %></td>
    <td><%= link_to 'Show', shift %></td>
    <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
    <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

