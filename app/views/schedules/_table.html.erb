<table class="table table-hover table-striped table-bordered table-condensed">
<% @employee_schedule ||= @schedule.to_csv_em %>
  <% @employee_schedule.split(%r{;\s*}).each do |line| %>
  	<tr>
	  <% line.split(%r{,\s*}).each do |cell| %>
	  	<td><%= cell %></td>
	  <% end %>
  	</tr>
  <% end %>
</table>

<br><br>

<table class="table table-hover table-striped table-bordered table-condensed">
<% @shift_schedule ||= @schedule.to_csv_sh %>
  <% @shift_schedule.split(%r{;\s*}).each do |line| %>
    <tr>
    <% line.split(%r{,\s*}).each do |cell| %>
      <td><%= cell %></td>
    <% end %>
    </tr>
  <% end %>
</table>
